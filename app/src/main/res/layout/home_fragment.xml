<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/main_fragment"
    tools:context="edu.milton.miltonmobileandroid.HomeActivity.HomeFragment">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/home_fragment_welcomeLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_fragment_holderText"
        android:layout_alignTop="@+id/home_fragment_welcomeLabel"
        android:layout_alignLeft="@+id/home_fragment_welcomeLabel"
        android:text="A Google Now for Milton Academy. Will Be Coming Soon."/>

</RelativeLayout>
