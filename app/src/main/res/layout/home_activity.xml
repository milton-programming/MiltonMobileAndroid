<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_activity"
    tools:context="edu.milton.miltonmobileandroid.HomeActivity"
    tools:ignore="MergeRootFrame">
    <!--The main frame -->
    <FrameLayout
        android:id="@+id/home_activity_home_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment android:name="edu.milton.miltonmobileandroid.HomeActivity$MainFragment"
            tools:layout="@layout/home_fragment"
            android:id="@+id/home_activity_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </FrameLayout>

    <!--The drawer frame -->
    <FrameLayout
        android:layout_width="240dp"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        android:id="@+id/home_activity_nav_frame">
        <fragment android:name="edu.milton.miltonmobileandroid.NavigationFragment"
            tools:layout="@layout/navigation_fragment"
            android:id="@+id/home_activity_nav_fragment"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
    </FrameLayout>

</android.support.v4.widget.DrawerLayout>
